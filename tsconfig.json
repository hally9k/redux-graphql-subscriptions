/* packages/react-components/tsconfig.json */
{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es2015",
    "outDir": "lib",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "strict": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "*": [
        "node_modules",
        "node_modules/@types/*",
        "typings/*",
        "src/*",
        "__generated__/*",
        "*"
      ]
    }
  },
  "include": ["typings", "src/**/*.ts"]
}
