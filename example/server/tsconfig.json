{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "lib": ["es2015"],
  "paths": {
    "*": ["./node_modules", "./node_modules/@types/*", "./typings/*", "*"]
  }
}
